    "@babel/preset-env": "^7.12.7",
    "jsdoc": "^3.6.6",
    "minami": "^1.2.3",
    "mocha": "^8.2.1",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {},
