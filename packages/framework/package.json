  "main": "dist/index.js",
  "directories": {
    "src": "src",
    "test": "tests"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "mocha -mocha --require @babel/polyfill --require @babel/register './test/**/*.js'",
